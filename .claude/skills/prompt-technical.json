{
  "name": "prompt-technical",
  "version": "2.1.0",
  "description": "Technical implementation analysis with hybrid intelligence",
  "command": "/prompt-technical",
  "aliases": ["/tech", "/technical"],
  "category": "prompt-engineering",
  "timing": {
    "simple": "5s",
    "moderate": "15s",
    "complex": "30s"
  },
  "arguments": {
    "task": {
      "type": "string",
      "required": true,
      "description": "The technical task to analyze"
    },
    "flags": {
      "type": "array",
      "items": ["--manual", "--agent", "--no-cache", "--no-predict", "--verbose"],
      "description": "Override flags for execution control"
    }
  },
  "capabilities": {
    "complexity_detection": true,
    "agent_spawning": true,
    "caching": true,
    "multi_agent_verification": true,
    "learning": true,
    "predictive_intelligence": true
  },
  "agents": {
    "explore": {
      "model": "haiku",
      "timeout": 30000,
      "purpose": "Codebase exploration and pattern detection"
    },
    "plan": {
      "model": "sonnet",
      "timeout": 60000,
      "purpose": "Implementation planning"
    }
  },
  "outputs": {
    "complexity_analysis": "Complexity score and matched triggers",
    "project_context": "Tech stack, architecture, relevant files",
    "implementation_options": "2-3 approaches with pros/cons",
    "best_practices": "Tech stack specific checklist",
    "implementation_plan": "Ordered steps with phases",
    "code_scaffolding": "Ready-to-use templates"
  },
  "dependencies": {
    "library": [
      "@.claude/library/prompt-perfection-core.md",
      "@.claude/library/adapters/technical-adapter.md",
      "@.claude/library/adapters/hybrid-adapter.md"
    ],
    "config": [
      "@.claude/config/complexity-rules.json",
      "@.claude/config/agent-templates.json",
      "@.claude/config/cache-config.json"
    ],
    "rules": [
      "@.claude/rules/technical-patterns.md"
    ],
    "memory": [
      "@.claude/memory/prompt-patterns.md"
    ]
  },
  "examples": [
    {
      "input": "/prompt-technical Add user authentication",
      "complexity": "moderate",
      "description": "Cross-cutting concern triggers agent assistance"
    },
    {
      "input": "/prompt-technical --manual Add input validation",
      "complexity": "simple",
      "description": "Manual override skips agent"
    },
    {
      "input": "/prompt-technical Refactor UserService to follow repository pattern",
      "complexity": "complex",
      "description": "Refactoring + pattern detection triggers full agent analysis"
    }
  ]
}

{
  "name": "prompt-hybrid",
  "version": "4.0.0",
  "description": "Intelligent prompt perfection with automatic complexity detection and agent spawning",
  "command": "/prompt-hybrid",
  "aliases": ["/hybrid", "/ph"],
  "category": "prompt-engineering",
  "timing": {
    "simple": "2s",
    "moderate": "10s",
    "complex": "30s"
  },
  "arguments": {
    "prompt": {
      "type": "string",
      "required": true,
      "description": "The prompt to perfect"
    }
  },
  "capabilities": {
    "complexity_detection": true,
    "agent_spawning": true,
    "caching": true,
    "multi_agent_verification": true,
    "learning": true,
    "predictive_intelligence": true
  },
  "features": {
    "phase_0": "Universal prompt perfection flow",
    "phase_0.15": "Predictive intelligence (optional)",
    "complexity_scoring": "Automatic threshold-based path selection",
    "agent_caching": "10-20x speedup for repeated analyses",
    "learning_system": "Pattern tracking and smart defaults"
  },
  "thresholds": {
    "simple": {"min": 0, "max": 4, "action": "inline"},
    "moderate": {"min": 5, "max": 9, "action": "suggest_agent"},
    "complex": {"min": 10, "max": 19, "action": "spawn_agent"},
    "research": {"min": 20, "max": 999, "action": "research_mode"}
  },
  "dependencies": {
    "library": [
      "@.claude/library/prompt-perfection-core.md",
      "@.claude/library/adapters/hybrid-adapter.md",
      "@.claude/library/intelligence/predictive-intelligence-core.md"
    ],
    "config": [
      "@.claude/config/complexity-rules.json",
      "@.claude/config/predictive-intelligence.json",
      "@.claude/config/learning-config.json"
    ]
  }
}

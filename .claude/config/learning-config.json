{
  "version": "1.1.0",
  "description": "Learning system configuration for prompt pattern tracking and reflection analysis",
  "learning_settings": {
    "enabled": true,
    "pattern_storage": ".claude/memory/prompt-patterns.md",
    "learning_threshold": 3,
    "auto_suggest_improvements": true,
    "track_user_modifications": true
  },
  "reflection_analysis": {
    "enabled": true,
    "min_signals_to_report": 2,
    "observation_storage": ".claude/memory/observations.md",
    "confidence_thresholds": {
      "correction": 0.6,
      "success": 0.5,
      "edge_case": 0.4,
      "preference": 0.4
    },
    "priority_rules": {
      "high": {
        "min_confidence": 0.8,
        "min_occurrences": 1
      },
      "medium": {
        "min_confidence": 0.5,
        "min_occurrences": 2
      },
      "low": {
        "min_confidence": 0.4,
        "min_occurrences": 1
      }
    },
    "signal_patterns": {
      "correction": [
        "no,? (?:not |don't |that's not)",
        "I (?:meant|wanted|need)",
        "(?:change|fix|update) (?:that|this|it)",
        "(?:wrong|incorrect|not right)",
        "(?:actually|instead|rather)"
      ],
      "success": [
        "(?:perfect|great|excellent|awesome)",
        "(?:yes|yeah|yep|correct|exactly)",
        "(?:thanks|thank you|looks good)",
        "(?:proceed|continue|go ahead)"
      ],
      "edge_case": [
        "(?:can you also|what about)",
        "(?:is there a way|how do I)",
        "(?:doesn't handle|missing|no option)",
        "(?:workaround|manually|had to)"
      ],
      "preference": [
        "I (?:prefer|like|always use)",
        "(?:usually|typically|normally)"
      ]
    },
    "accumulation_window": 5,
    "max_proposals_per_priority": 5
  },
  "pattern_tracking": {
    "track_successful_transformations": true,
    "track_clarification_questions": true,
    "track_user_preference_patterns": true,
    "track_complexity_accuracy": true,
    "track_agent_effectiveness": true
  },
  "learning_categories": {
    "prompt_types": {
      "track": true,
      "categories": [
        "bug_fix",
        "feature_implementation",
        "refactoring",
        "architecture_question",
        "code_review",
        "performance_optimization"
      ]
    },
    "common_missing_info": {
      "track": true,
      "auto_detect": true
    },
    "user_modification_patterns": {
      "track": true,
      "learn_preferences": true
    },
    "complexity_score_accuracy": {
      "track": true,
      "auto_adjust_weights": false,
      "suggest_weight_adjustments": true
    }
  },
  "smart_defaults": {
    "enabled": true,
    "confidence_threshold": 0.75,
    "min_pattern_occurrences": 3,
    "context_sources": [
      "project_type",
      "tech_stack",
      "coding_conventions",
      "team_patterns"
    ]
  },
  "feedback_loop": {
    "track_approval_rate": true,
    "track_modification_frequency": true,
    "track_agent_vs_manual_preference": true,
    "suggest_rule_improvements": true
  }
}
